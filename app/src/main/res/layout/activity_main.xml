<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/frameLayout"
        android:layout_weight="1">
        
    </FrameLayout>
    
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottomnav_item"
        android:background="@drawable/bottom_nav_item_bg"
        android:elevation="12dp"
        app:itemRippleColor="#40212121"
        app:itemActiveIndicatorStyle="@style/CustomBottomNavActiveIndicator"
        app:itemIconTint="@drawable/bottom_nav_item_color"
        app:itemTextColor="@drawable/bottom_nav_item_color"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:itemPaddingTop="8dp"
        app:itemPaddingBottom="8dp"
        app:labelVisibilityMode="labeled" app:itemIconSize="24dp">

</com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>

